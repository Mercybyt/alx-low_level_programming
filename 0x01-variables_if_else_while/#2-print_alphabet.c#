#include <stdio.h>
/**
* main - print alphabet in lowercase
*
* Description: using the main function
* this program prints "Print alphabet in lowercase"
* Return: 0
*/
int main(void)
{
	char ch;
	for (ch = 'a' ; ch <= 'z' ; ch++)
        /* The code below */
	{
	putchar(ch);
	}
	putchar('\n');
	return (0);
}
