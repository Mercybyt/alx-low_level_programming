#include "holberton.h"
/**
 *print_array - function that prints half of a string, followed
 *@a: declaration of *a and parameters for the function
 *@n: declaration of n and paramters for the function
 *Return: Always 0.
 */
void print_array(int *a, int n)
input(int *a,int n)
{ 
    int i;
    
	for(i=0;i<n;i++)
    {
        scanf("%d", &a[i]);
    } 
         
   
          
}
     
output(int *a,int n)
{ 
    int i;
    
	for(i=0;i<n;i++)
    {
        printf("%d  ", a[i]);
    } 
         
  
 
          
}
 
 
 
int main()
{
    int a[1000],i,n;  
 
    printf("Enter size of array: ");
    scanf("%d",&n);
 
    printf("Enter %d elements in the array : ", n);
    input(a,n);
    printf("\nElements in array are: ");
    output(a,n);
 
    return 0;
}